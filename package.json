{
  "name": "chat-app-complete",
  "version": "1.0.0",
  "description": "Real-time chat application",
  "main": "backend/src/index.js",
  "scripts": {
    "build": "cd frontend && npm install --production=false && npm run build && cd ../backend && npm install --include=optional",
    "start": "cd backend && npm start",
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "setup-models": "node setup-models.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "engines": {
    "node": "18.x"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "ioredis": "^5.8.2",
    "node-cron": "^4.2.1"
  }
}
